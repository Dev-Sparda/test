Private Sub chkSeleccion_Click()
    Dim db As DAO.Database
    Set db = CurrentDb
    
    If Me.chkSeleccion = True Then
        db.Execute "INSERT INTO tblSeleccionTemporal (IDRegistro) VALUES (" & Me!ID & ")"
    Else
        db.Execute "DELETE FROM tblSeleccionTemporal WHERE IDRegistro=" & Me!ID
    End If
    
    ' Recargar el checkbox sin que Access intente actualizar la consulta
    Me.chkSeleccion = (DCount("*", "tblSeleccionTemporal", "IDRegistro=" & Me!ID) > 0)
    
    Set db = Nothing
End Sub
